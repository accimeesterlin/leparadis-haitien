<!-- testimonials section-->
<section class="small-section cws_prlx_section bg-blue-40">
    <div class="container testimonial">
        <div class="row">
            <div class="col-md-8">
                <h6 class="title-section-top font-4">{{homePageInformation.0.testimonialsSubtitle}}</h6>
                <h2 class="title-section alt-2">{{homePageInformation.0.testimonialsTitle}}</h2>
                <div class="cws_divider mb-25 mt-5"></div>
            </div>
        </div>
        <div class="row">
            <!-- testimonial carousel-->
            <div class="owl-three-item owl-carousel owl-theme" style="opacity: 1; display: block;">
                {{#each testimonials}}
                <!-- testimonial item-->
                <div class="testimonial-item">
                    <div class="testimonial-top">
                        <a href="{{textButtonLink}}">
                            <div class="pic" style="background-color: {{backgroundColorCode}}">
                            </div>
                        </a>
                        <div class="author">
                            <img src="https:{{profilePicture.fields.file.url}}" data-at2x="https:{{profilePicture.fields.file.url}}" alt="" />
                        </div>
                    </div>
                    <!-- testimonial content-->
                    <div class="testimonial-body">
                        <h5 class="title"><span>{{firstName}}</span> {{lastName}}</h5>
                        <div class="stars stars-{{rating}}"></div>
                        <p class="align-center">{{description}}</p><a href="{{readmore_url}}"
                            class="testimonial-button">{{textButton}}</a>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</section>
<!-- ! testimonials section-->