<!-- latest news-->
<section class="small-section cws_prlx_section bg-blue-40">
    <div class="container">
        <div class="row mb-50">
            <div class="col-md-8">
                <h6 class="title-section-top font-4">{{homePageInformation.0.latestBlogSubtitle}}</h6>
                <h2 class="title-section alt-2">{{homePageInformation.0.latestBlogTitle}}</h2>
                <div class="cws_divider mb-25 mt-5"></div>
                <p class="color-white">{{homePageInformation.0.latestBlogDescription.content.0.content.value}}</p>
            </div>
            <div class="col-md-4"><i class="flaticon-suntour-calendar title-icon alt"></i></div>
        </div>
        <div class="carousel-container">
            <div class="row">
                <div class="owl-two-pag pagiation-carousel mb-20">
                    <!-- Blog item-->
                    {{#each latestBlog}}
                        <div class="blog-item clearfix">
                            <!-- Blog Image-->
                            <div class="blog-media">
                                <a href="{{readMoreLink}}">
                                    <div class="pic">
                                        <img src="https:{{picture.fields.file.url}}"
                                            data-at2x="https:{{picture.fields.file.url}}" alt>
                                    </div>
                                </a>
                            </div>
                            <!-- blog body-->
                            <div class="blog-item-body clearfix">
                                <!-- title-->
                                <a href="{{readMoreLink}}">
                                    <h6 class="blog-title">{{title}}</h6>
                                </a>
                                <div class="blog-item-data">{{date}}</div>
                                <!-- Text Intro-->
                                <p>{{description}}</p>
                                <a href="{{readMoreLink}}" class="blog-button">Read more</a>
                            </div>
                        </div>
                    {{/each}}
                    <!-- ! Blog item-->
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ! latest news-->